{{title}}
<form class="form-horizontal" action="/find" method="post">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" name="noteTitle" id="noteTitle" placeholder="Title of note you are sarching for">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <textarea class="form-control" rows="15" name="noteContent" id="noteContent" placeholder="Content of note you are sarching for"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Search</button>
    </div>
  </div>
</form>
