{{title}}
<form class="form-horizontal" action="/create" method="post">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" name="newNoteTitle" id="newNoteTitle" placeholder="Title for your new note">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <textarea class="form-control" rows="15" name="newNoteContent" id="newNoteContent" placeholder="Write your new note here and click save."></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Save</button>
    </div>
  </div>
</form>
