<div class="container">
  <div class="row">
    <h1>Create a new note</h1>
  </div>
  <div class="row">
  <form action="/create" method="post">
    <div class="form-group">
      <div class="col-sm-10">
        <input type="text" class="form-control" name="newNoteTitle" id="newNoteTitle" placeholder="Title for your new note.">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-10">
        <textarea class="form-control" name="newNoteContent" id="newNoteContent" placeholder="Write your new note here and click save."></textarea>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-10">
        <input type="text" class="form-control" name="newNoteKeywords" id="newNoteKeywords" placeholder="Keywords">
      </div>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-default">Save</button>
      </div>
    </div>
  </form>
  </div>
</div>
